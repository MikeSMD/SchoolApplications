<Window x:Class="WPF_projekt.EditStudijniProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_projekt"
        mc:Ignorable="d"
        Title="EditStudijniProgram" Height="137" Width="800">
    <StackPanel Height="127" VerticalAlignment="Top">
        <DockPanel>
            <Label>nazev:</Label>
            <TextBox Text="{Binding nazev}"/>
        </DockPanel>

        <DockPanel>
            <Label>zkratka:</Label>
            <TextBox Text="{Binding zkratka}"/>
        </DockPanel>

        <DockPanel>
            <Label>popis:</Label>
            <TextBox Text="{Binding popis}"/>
        </DockPanel>
        
        <Button Click="Save" Content="Uložit"/>

    </StackPanel>
</Window>
